<resources>
    <style name="Base.Theme.Volans" parent="Theme.Material3.Light.NoActionBar">

        <item name="switchStyle">@style/Widget.App.Switch</item>

        <item name="colorPrimaryContainer">@color/background_btn_card</item>
        <item name="colorPrimary">@color/primary</item>

        <item name="android:buttonStyle">@style/button_secondary</item>

        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSurfaceVariant">#D9E1FF</item>

    </style>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>