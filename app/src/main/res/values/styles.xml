<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimaryContainer">@color/background_btn_card</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="button_primary" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_primary_text_color</item>
        <item name="android:height">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_outline" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:height">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_date" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#0F1479</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_date</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_secondary" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_secondary_text_color</item>
        <item name="android:height">55dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_delete" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_delete_text_color</item>
        <item name="android:height">55dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_delete</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>